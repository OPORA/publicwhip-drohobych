<div class="list-filters clearfix">
  <% if params[:policies].blank? %>
  <ul class="sort-first text-uppercase d-none d-sm-none d-md-none d-lg-block">
    <li <%= params[:filter].nil? ? "class=disabled": "" %> ><%= link_to "Опубліковані політики", params.merge(filter: nil), remote: true %></li>
    <li <%= params[:filter] == "provisional" ? "class=disabled": "" %> ><%= link_to "Проекти політик", params.merge(filter: :provisional), remote: true %></li>
    <%= link_to 'СТВОРИТИ НОВУ ПОЛІТИКУ', new_policy_path, class: "new-policy"  %>
  </ul>
   <select class="mobile_select d-block d-md-none" onchange="window.location.href=this.value;">
      <option value="<%=policies_path(params.merge(filter: :nil))%>">Опубліковані політики</option>
      <option <%= params[:filter] == "provisional" ? 'selected="selected"': ''%> value="<%=policies_path(params.merge(filter: :provisional))%>">Проекти політик</option>
      <option <%= params[:filter] == "p" ? 'selected="selected"': ''%> value="<%= new_policy_path %>">СТВОРИТИ НОВУ ПОЛІТИКУ</option>
  </select>

  <% end %>
  <div id="list_policy">
  <%= render 'policy',  policies: @policies %>
  </div>
</div>