                          <span class="fa-stack">
                            <i class="fa fa-search fa-stack-1x fa-inverse" aria-hidden="true"></i>
                          </span>
        <%= text_field_tag(:policies, params[:policies] , class: "form-control mr-sm-2" , placeholder: "Шукати по заголовку" ) %>
        <!--<i class="fa fa-chevron-down arrow-icon" aria-hidden="true"></i>-->
    <% end %>
  </div>
  <div id="policy">
    <%= render(:partial => 'index', :locals => {:policies => @policies}) %>
  </div>
</div>


